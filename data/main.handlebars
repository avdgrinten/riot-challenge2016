<!DOCTYPE html>
<html>	
<head>
	<title>Guess my main!</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	<link rel="stylesheet" href="style.css">
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script type="application/javascript" src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
	<script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.runtime.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	<script type="application/javascript" src="templates.js"></script>
</head>
<body>
	<div id="overlay" class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 header"><h1>Guess my main!</h1></div>

			{{#if inSummonerSelect}}
			<div class="col-xs-12 col-sm-12 col-md-12 submit-div">
				<p class="input-text">Enter your summoner name and region to play.</p>
				<form id="submit" class="form-inline">
					<input type="text" id="input-summoner-name" class="form-control" placeholder="Summoner name"/>
					<select id="select-region" class="form-control">
						<option value="br">BR</option>
						<option value="eune">EUNE</option>
						<option value="euw">EUW</option>
						<option value="jp">JP</option>
						<option value="kr">KR</option>
						<option value="lan">LAN</option>
						<option value="las">LAS</option>
						<option value="na">NA</option>
						<option value="oce">OCE</option>
						<option value="ru">RU</option>
						<option value="tr">TR</option>
					</select>
					<button type="submit" id="btn-submit" class="btn btn-default">Go!</button>
				</form>
			</div>
			{{/if}}

			{{#if inLobbySelect}}
			<div class="col-xs-12 col-sm-12 col-nd-12">
				<p class="lobby-text">Hello PositronTheory</p>
				<p class="lobby-text">Share this link with your friends to play together:</p>
				<p class="lobby-text">
					<input type="text" class="form-control lobby-link" value="link" />
					<button id="clipboard-button" type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="Copy to clipboard">
  						<span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
					</button>
				</p>
				<p class="lobby-text">
					<button type="button" class="btn btn-default lobby-button">I'm ready!</button>
				</p>
			</div>
			{{/if}}

			{{#if inActiveGame}}
			<div class="col-xs-3 col-sm-3 col-md-3 left-column">
				<ul id="question-list">
					<li class="question-list-item">What's his main?</li>
					<li class="question-list-item">What's his least played?</li>
					<li class="question-list-item">What's his main winrate?</li>
				</ul>
			</div>
			<div class="col-xs-6 col-sm-6 col-md-6">
				<p class="question-text">This player has mastered</p>
				<div class="question-images">
					{{#each masteries}}
						<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/champion/{{championKey}}.png" width="80" height="80">
					{{/each}}
				</div>
				<p class="question-text">What's his main?</p>
				<div class="champ-select">
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-default">
							<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/champion/Azir.png" width="80" height="80">
						</button>
						<button type="button" class="btn btn-default">
							<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/champion/Sion.png" width="80" height="80">
						</button>
						<button type="button" class="btn btn-default">
							<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/champion/Singed.png" width="80" height="80">
						</button>
					</div>
				</div>
				<p class="timer">Timer: 15s</p>
			</div>
			<div class="col-xs-3 col-sm-3 col-md-3 right-column">
				<ul id="summoner-list">
					<li class="summoner">
						<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/profileicon/589.png" width="32" height ="32">
						 korona
					</li>
					<li class="summoner">
						<img src="http://ddragon.leagueoflegends.com/cdn/6.8.1/img/profileicon/588.png" width="32" height ="32">
						 PositronTheory
					</li>
				</ul>
			</div>
			{{/if}}

		</div>
	</div>

	<script>
		function pollAgain() {
			$.post({
				url: 'api/poll/{{lobbyId}}',
				success: (data) => {
					console.log(data);

					pollAgain();
				},
				error: (xhr, status, error) => {
					console.error("Could not retrieve api/poll/:lobby endpoint");
					console.error("Status:", status);
					console.error(error);
				}
			});
		}

		pollAgain();

		function submit() {
			$.post({
				url: '/api/select-summoner',
				data: JSON.stringify({
					summonerName: $("#input-summoner-name").val(),
					region: $("#select-region").val()
				}),
				success: (data) => {
					console.log(data);
					window.location.reload();
				},
				error: (xhr, status, error) => {
					console.error("Could not retrieve api/select-summoner endpoint");
					console.error("Status:", status);
					console.error(error);
				},
				contentType: 'application/json'
			});
		}

		$(document).ready(function() {
    		console.log( "ready!" );

			$("#submit").submit(function(event) {
				event.preventDefault();
				submit();
			});

			$("#clipboard-button").mouseenter(function(event) {
				$("#clipboard-button").tooltip("show");
			});

			$("#clipboard-button").mouseleave(function(event) {
				$("#clipboard-button").tooltip("hide");
			});

			$("#clipboard-button").click(function(event) {
				$(".lobby-link").select();

				try {
					document.execCommand('copy');
				} catch (err) {
					console.log("Unable to copy link!");
				}
			});
		});

	</script>

</body>
</html>

